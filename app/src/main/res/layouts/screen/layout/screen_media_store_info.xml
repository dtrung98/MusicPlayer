<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:id="@+id/back_wall_drawn_on"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="visible">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/backward_color">

        <ImageView
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:layout_gravity="bottom"
          android:layout_marginBottom="3dp"
          android:src="@drawable/splash_icon_mini" />
      </FrameLayout>

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_gravity="bottom|center"
          android:gravity="center"
          android:text="@string/trade_mark"
          android:textColor="#20ffffff"
          android:textSize="18sp"
          android:textStyle="bold" />

        <com.ldt.musicr.ui.widget.SeeThroughTextView
          android:id="@+id/trade_mark"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_gravity="bottom|center"
          android:background="@color/backward_color"
          android:gravity="center"
          android:text="@string/trade_mark"
          android:textSize="18sp"
          android:textStyle="bold" />
      </FrameLayout>

      <com.ldt.musicr.ui.widget.SeeThroughLineView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/backward_color"
        android:paddingLeft="100dp"
        android:paddingTop="25dp"
        android:paddingRight="100dp"
        android:paddingBottom="1dp" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#18ffffff"
        android:orientation="horizontal"
        android:weightSum="1">

        <View
          android:layout_width="30dp"
          android:layout_height="match_parent"
          android:background="@color/backward_color" />

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@color/backward_color"
              android:gravity="center"
              android:paddingEnd="15dp"
              android:text="Total Songs" />

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/backward_color"
              android:gravity="center"
              android:text="•" />

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@color/backward_color"
              android:gravity="center"
              android:paddingStart="20dp"
              android:text="50" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@color/backward_color"
              android:gravity="center"
              android:paddingEnd="15dp"
              android:text="Total Artists" />

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/backward_color"
              android:gravity="center"
              android:text="•" />

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@color/backward_color"
              android:gravity="center"
              android:paddingStart="15dp"
              android:text="23" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@color/backward_color"
              android:gravity="center"
              android:paddingEnd="15dp"
              android:text="Initialized Playlists" />

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/backward_color"
              android:gravity="center"
              android:text="•" />

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@color/backward_color"
              android:gravity="center"
              android:paddingStart="15dp"
              android:text="47" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@color/backward_color"
              android:gravity="center"
              android:paddingEnd="15dp"
              android:text="Total Playing Time" />

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/backward_color"
              android:gravity="center"
              android:text="•" />

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@color/backward_color"
              android:gravity="center"
              android:paddingStart="15dp"
              android:text="1459s" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@color/backward_color"
              android:gravity="center"
              android:paddingEnd="15dp"
              android:text="Now Playing" />

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/backward_color"
              android:gravity="center"
              android:text="•" />

            <com.ldt.musicr.ui.widget.SeeThroughTextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@color/backward_color"
              android:gravity="center"
              android:paddingStart="15dp"
              android:text="1st in playlists" />
          </LinearLayout>

          <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/backward_color" />
        </LinearLayout>

        <View
          android:layout_width="30dp"
          android:layout_height="match_parent"
          android:background="@color/backward_color" />
      </LinearLayout>
    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/backward_color" />
  </LinearLayout>

  <View
    android:id="@+id/back_wall_blank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backward_color"
    android:visibility="gone" />
</FrameLayout>
