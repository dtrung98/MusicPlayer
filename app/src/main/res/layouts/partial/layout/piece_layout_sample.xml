<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/piece_root_linear"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingBottom="20dp">

  <TextView
    android:id="@+id/piece_header"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:gravity="center_vertical"
    android:paddingStart="20dp"
    android:paddingLeft="20dp"
    android:tag="sticky|-hastransparancy"
    android:text="Text Header"
    android:textColor="@android:color/black"
    android:textSize="@dimen/header1_text_size" />

  <FrameLayout
    android:id="@+id/piece_content_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"></FrameLayout>
</LinearLayout>