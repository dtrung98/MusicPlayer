<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/background_panel_color"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="20dp">
    <ImageView
        android:id="@+id/toggle"
        android:layout_width="35dp"
        android:layout_height="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/slide_up_down_icon_drawable" />
    <TextView
        android:id="@+id/by_title_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/toggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start|center_vertical"
        android:textStyle="bold"
        android:text="@string/title"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:background="@drawable/ripple_16dp_translucent"
        android:clickable="true"
        android:focusable="true"
        android:ellipsize="end"
        android:textColor="@color/md_bottom_sheet_text_color"
        android:textSize="15sp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"/>
    <ImageView
        android:id="@+id/icon_by_title"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/by_title_text"
        app:layout_constraintBottom_toBottomOf="@id/by_title_text"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/alphabet"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/last_added_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/by_title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start|center_vertical"
        android:textStyle="bold"
        android:text="@string/time_added"
        android:maxLines="1"
        android:layout_marginTop="6dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_16dp_transparent"
        android:ellipsize="end"
        android:textColor="@color/md_bottom_sheet_text_color"
        android:textSize="15sp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"/>
    <ImageView
        android:id="@+id/icon_last_added"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/last_added_text"
        app:layout_constraintBottom_toBottomOf="@id/last_added_text"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/date"
        android:padding="13dp"/>

    <TextView
        android:id="@+id/most_played_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/last_added_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start|center_vertical"
        android:textStyle="bold"
        android:text="@string/favorite"
        android:maxLines="1"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:textColor="@color/md_bottom_sheet_text_color"
        android:textSize="15sp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_16dp_transparent"/>
    <ImageView
        android:id="@+id/icon_most_played"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/most_played_text"
        app:layout_constraintBottom_toBottomOf="@id/most_played_text"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/star_sort"
        android:padding="12dp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#66333333"
        app:layout_constraintStart_toStartOf="@id/by_title_text"
        app:layout_constraintEnd_toEndOf="@id/by_title_text"
        app:layout_constraintTop_toBottomOf="@id/most_played_text"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/asc_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start|center_vertical"
        android:textStyle="bold"
        android:text="@string/asc"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:textColor="@color/md_bottom_sheet_text_color"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_16dp_translucent"
        android:textSize="15sp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"/>
    <ImageView
        android:id="@+id/icon_asc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/asc_text"
        app:layout_constraintBottom_toBottomOf="@id/asc_text"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/up_asc"
        android:padding="13dp"/>
    <TextView
        android:id="@+id/desc_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/asc_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start|center_vertical"
        android:textStyle="bold"
        android:text="@string/desc"
        android:maxLines="1"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:textColor="@color/md_bottom_sheet_text_color"
        android:textSize="15sp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_16dp_transparent"
        />
    <ImageView
        android:id="@+id/icon_desc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/desc_text"
        app:layout_constraintBottom_toBottomOf="@id/desc_text"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/up_asc"
        android:rotation="180"
        android:padding="13dp"/>
    <ImageView
        android:id="@+id/by_title_tick"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/by_title_text"
        app:layout_constraintEnd_toEndOf="@id/by_title_text"
        android:src="@drawable/tick"
        android:padding="15dp"/>
    <ImageView
        android:id="@+id/by_time_tick"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/last_added_text"
        app:layout_constraintEnd_toEndOf="@id/by_title_text"
        android:src="@drawable/tick"
        android:padding="15dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/most_played_tick"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/most_played_text"
        app:layout_constraintEnd_toEndOf="@id/by_title_text"
        android:src="@drawable/tick"
        android:padding="15dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/asc_tick"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/asc_text"
        app:layout_constraintEnd_toEndOf="@id/by_title_text"
        android:src="@drawable/tick"
        android:padding="15dp"/>
    <ImageView
        android:id="@+id/desc_tick"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/desc_text"
        app:layout_constraintEnd_toEndOf="@id/by_title_text"
        android:src="@drawable/tick"
        android:padding="15dp"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>